<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>US Expenses in Iran</title>
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
      background: #111;
      color: #fff;
      font-family: Arial, sans-serif;
    }
    #counter {
      font-size: 5rem;
      color: red;
      text-align: center;
    }
    #label {
      font-size: 2rem;
      margin-top: 0.5em;
      text-align: center;
    }
  </style>
</head>
<body>
  <div>
    <div id="counter">$0</div>
    <div id="label">US expenses in Iran</div>
  </div>

  <script>
    const ratePerSecond = 1192; // $1,192 per second
    const initialCost = 103000000; // $103 million

    // Time of first strike: June 21, 2025 00:00 UTC
    const startTimeUTC = new Date(Date.UTC(2025, 5, 21, 0, 0, 0)); // Months are 0-indexed

    function update() {
      const now = new Date();
      const secondsElapsed = Math.floor((now - startTimeUTC) / 1000);
      const totalCost = initialCost + ratePerSecond * secondsElapsed;

      document.getElementById('counter').textContent =
        '$' + totalCost.toLocaleString(undefined, { maximumFractionDigits: 0 });

      requestAnimationFrame(update);
    }

    update();
  </script>
</body>
</html>
